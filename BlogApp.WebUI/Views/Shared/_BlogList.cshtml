@model IEnumerable<Blog>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">Kayıt yok</div>
}
else
{
    @foreach (var item in Model)
    {
        <div class="card mb-2">
            <div class="card-header">
                @item.Title
            </div>
            <img class="card-img-top" src="~/img/@item.Image" alt="Card image cap">

            <div class="card-block">
                <h4 class="card-title">@item.Title</h4>
                <p class="card-text">@item.Description</p>
                <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId" class="btn btn-primary">Detaylar</a>
            </div>
        </div>
    }

}       